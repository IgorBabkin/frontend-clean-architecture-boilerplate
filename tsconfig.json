{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "jsx": "react",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules"
  ]
}
